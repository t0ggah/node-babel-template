{
  "extends": ["prettier", "eslint:recommended"],
  "parser": "babel-eslint",
  "plugins": ["prettier", "flowtype"],
  "rules": {
    "prettier/prettier": "error",
    "flowtype/require-valid-file-annotation": [
      2,
      "always"
    ]
  },
  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
